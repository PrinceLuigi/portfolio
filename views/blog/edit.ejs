<html>
	<head>
		<title>Secret New Page</title>
		<% include ../partials/head %>
	</head>
	<body>
		<% include ../partials/nav %>
		<div class="ui main text container segment">
		  <div class="ui huge header">Edit</div>
		  <form class="ui form" action="/blog/<%= blog._id %>?_method=PUT" method="POST">
		    <div class="field">
		      <label>Title</label>
		      <input type="text" name="blog[title]" value="<%= blog.title %>">
		    </div>
		    <div class="field">
		      <label>Subtitle</label>
		      <input type="text" name="blog[subtitle]" value="<%= blog.subtitle %>">
		    </div>
		    <div class="field">
		      <label>Blog Content</label>
		      <textarea name="blog[body]"><%= blog.body %></textarea>
		    </div>
		    <input class="ui violet big basic button" type="submit">
		  </form>
	</div>

<% include ../partials/footer %>